{
  "info": {
    "name": "Hotel Reservation Platform API",
    "description": "API documentation for the hotel reservation platform with authentication and admin features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"solutionlegend9@gmail.com\",\n  \"password\": \"Legend07\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Hotels",
      "item": [
        {
          "name": "Get All Hotels",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/hotels?page=1&limit=20&sort=price_per_night:asc",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "sort",
                  "value": "price_per_night:asc"
                }
              ]
            }
          }
        },
        {
          "name": "Get Hotel by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/hotels/1",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels", "1"]
            }
          }
        },
        {
          "name": "Create Hotel (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Hotel\",\n  \"country\": \"Nigeria\",\n  \"city\": \"Lagos\",\n  \"price_per_night\": 150,\n  \"currency\": \"USD\",\n  \"description\": \"A beautiful hotel\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/hotels",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels"]
            }
          }
        },
        {
          "name": "Update Hotel (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Hotel Name\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/hotels/1",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels", "1"]
            }
          }
        },
        {
          "name": "Delete Hotel (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/hotels/1",
              "host": ["{{base_url}}"],
              "path": ["api", "hotels", "1"]
            }
          }
        }
      ]
    },
